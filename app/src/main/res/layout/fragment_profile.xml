<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/person_image2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/smalllogo" />

                <!--<TextView-->
                <!--android:id="@+id/txt_person_name2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toEndOf="@+id/person_image2"-->
                <!--android:fontFamily="@font/tajawal_medium"-->
                <!--android:text="@string/no_data"-->

                <!--android:textColor="#2E1A10"-->
                <!--android:textSize="17sp"-->
                <!--android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/txt_person_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/person_image2"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/welcome_in"
                    android:textColor="#2E1A10"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_member_since3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_person_name2"
                    android:layout_alignBaseline="@+id/txt_person_name2"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/txt_person_name2"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/app_name"
                    android:textColor="#F7A453"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_person_name2"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/person_image2"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="Your Name"
                    android:textColor="#2E1A10"
                    android:textSize="15sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/card_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_all_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"

                    android:foreground="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:text="@string/all_order"
                    android:textColor="#353B50"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/txt_pending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableTop="@drawable/ic_prepared"
                        android:drawablePadding="9dp"
                        android:focusable="true"
                        android:fontFamily="@font/tajawal_regular"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/pending"
                        android:textColor="#353B50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_prepared"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"

                        android:clickable="true"
                        android:drawableTop="@drawable/ic_pending"
                        android:drawablePadding="9dp"
                        android:focusable="true"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="center"
                        android:text="@string/in_progress_order"
                        android:textColor="#353B50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_shipped"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"

                        android:clickable="true"
                        android:drawableTop="@drawable/ic_shipped"
                        android:drawablePadding="9dp"
                        android:focusable="true"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="center"
                        android:text="@string/complete_order"
                        android:textColor="#353B50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_canceled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:drawableTop="@drawable/ic_canceled"
                        android:drawablePadding="9dp"
                        android:focusable="true"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="center"

                        android:text="@string/canceled"
                        android:textColor="#353B50"
                        android:textSize="12sp" />

                    <!--<TextView-->
                    <!--android:id="@+id/txt_rates"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="?selectableItemBackground"-->
                    <!--android:clickable="true"-->
                    <!--android:drawableTop="@drawable/ic_rated"-->
                    <!--android:drawablePadding="9dp"-->
                    <!--android:focusable="true"-->

                    <!--android:fontFamily="@font/tajawal_regular"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/rates"-->
                    <!--android:textColor="#353B50"-->
                    <!--android:textSize="12sp" />-->
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/email"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_1"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/no_thing_found"
                    android:textColor="#717171"

                    android:textSize="13sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_1"
                    android:layout_marginTop="10dp" />
                <!-- -->
                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/tajawal_regular"

                    android:text="@string/mobile"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_2"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="00000000000"

                    android:textColor="#717171"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_2"
                    android:layout_marginTop="10dp" />

                <!---->

                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_2"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/tajawal_regular"

                    android:text="@string/address"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_3"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/no_thing_found"

                    android:textColor="#717171"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_3"
                    android:layout_marginTop="10dp" />
                <!---->

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_edit_profile"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_vertical"

                    android:text="@string/edit_profile"
                    android:textColor="#363636"
                    android:textSize="15sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />


                <TextView
                    android:id="@+id/txt_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_change_pssword"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"

                    android:gravity="center_vertical"
                    android:text="@string/change_password"
                    android:textColor="#363636"
                    android:textSize="15sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/txt_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_ex_like"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center_vertical"
                    android:text="Send Feedback"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/txt_my_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_ex_like"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center_vertical"
                    android:text="My Feedbacks"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/txt_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_top_share"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center_vertical"
                    android:text="@string/invite_friends"
                    android:textColor="#363636"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/txt_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_about"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:text="@string/about_us"
                    android:textColor="#363636"
                    android:textSize="15sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_exit"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="13sp"
                    android:focusable="true"
                    android:fontFamily="@font/tajawal_regular"

                    android:gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="#363636"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>